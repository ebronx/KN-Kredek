@model KredekStronaZadDom.Models.Order

@{
    ViewData["Title"] = "Twoje zamowienie";
}

<h1>Kupione kursy</h1>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayName("kurs")
        </dt>
        <dd class="col-sm-10">
            @ViewBag.orderPizza.Name
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("cena")
        </dt>
        <dd class="col-sm-10">
            @ViewBag.orderPizza.Price
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Imie")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Nazwisko")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Surname)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Nr tel")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Phone)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Email")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("data zamowienie")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrderDate)
        </dd>
    </dl>


</div>
